{
  "name": "dynamic-scene",
  "version": "1.0.0",
  "description": "My Twitch Overlay and Bot",
  "main": "dist/index.js",
  "scripts": {
    "start:backend": "node backend/dist/index.js --max-old-space-size=512 --expose-gc",
    "start:backend:dev": "node backend/dist/index.js --max-old-space-size=512 --expose-gc --trace_gc --trace-deprecation --trace-warnings --trace-uncaught --track-heap-objects --inspect=0.0.0.0:3000",
    "build": "npm run build:backend && npm run build:frontend",
    "build:dev": "npm run build:backend:dev && npm run build:frontend:dev",
    "build:backend": "esbuild backend/src/App.ts --tree-shaking=true --target=es2020 --bundle --minify --color=true --platform=node --outfile=backend/dist/index.js",
    "build:frontend": "rm -rf frontend/dist/* && esbuild frontend/src/App.ts --tree-shaking=true --target=es2020 --bundle --minify --color=true --external:*.mp4 --external:*.svg --external:*.gif --loader:.woff=copy --loader:.woff2=copy --loader:.eot=copy --loader:.ttf=copy --external:*.webp --platform=browser --asset-names=[name] --outfile=frontend/dist/app.js",
    "build:backend:dev": "esbuild backend/src/App.ts --tree-shaking=true --target=es2020 --bundle --color=true --platform=node --outfile=backend/dist/index.js",
    "build:frontend:dev": "rm -rf frontend/dist/* && esbuild  frontend/src/App.ts --watch --tree-shaking=true --target=es2020 --bundle --color=true --platform=browser --external:*.mp4 --external:*.svg --external:*.gif --loader:.woff=copy --loader:.woff2=copy --loader:.eot=copy --loader:.ttf=copy --external:*.webp --asset-names=[name] --outfile=frontend/dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliteSchwein/dynamic-scene.git"
  },
  "keywords": [
    "twitch"
  ],
  "author": "tludwig-dev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eliteSchwein/dynamic-scene/issues"
  },
  "homepage": "https://github.com/eliteSchwein/dynamic-scene#readme",
  "devDependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@mdi/font": "^7.4.47",
    "@twurple/api": "^7.2.1",
    "@twurple/auth": "^7.2.1",
    "@twurple/chat": "^7.2.1",
    "@twurple/easy-bot": "^7.2.1",
    "@twurple/eventsub-ws": "^7.2.1",
    "@twurple/pubsub": "^7.2.1",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/readline-sync": "^1.4.8",
    "@types/sharp": "^0.32.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "async-wait-until": "^2.0.18",
    "axios": "^1.7.9",
    "bootstrap": "^5.3.3",
    "bytes": "^3.1.2",
    "colorts": "^0.1.63",
    "esbuild": "^0.24.2",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "js-conf-parser": "^1.0.2",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "npm-check-updates": "^17.1.13",
    "obs-websocket-js": "^5.0.6",
    "querystring": "^0.2.1",
    "readline-sync": "^1.4.10",
    "regex-parser": "^2.3.0",
    "shelljs": "^0.8.5",
    "stacktrace-js": "^2.0.2",
    "ts-node": "^10.9.2",
    "tsparticles": "^3.7.1",
    "typescript": "^5.7.2",
    "uuid": "^11.0.4",
    "websocket-ts": "^2.1.5",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "sharp": "^0.33.5",
    "systeminformation": "^5.25.3"
  }
}

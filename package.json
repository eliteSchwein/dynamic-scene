{
  "name": "dynamic-scene",
  "version": "1.0.0",
  "description": "My Twitch Overlay and Bot",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:dev": "npm run build:backend:dev && npm run build:frontend:dev",
    "build:backend": "esbuild backend/src/app.ts  --tree-shaking=true --target=es2020 --bundle --minify --color=true --platform=node --outfile=backend/dist/index.js",
    "build:frontend": "esbuild frontend/src/app.ts  --tree-shaking=true --target=es2020 --bundle --minify --color=true --platform=node --outfile=frontend/dist/index.js",
    "build:backend:dev": "esbuild backend/src/app.ts  --tree-shaking=true --target=es2020 --bundle --color=true --platform=node --outfile=backend/dist/index.js",
    "build:frontend:dev": "esbuild frontend/src/app.ts  --tree-shaking=true --target=es2020 --bundle --color=true --platform=node --outfile=frontend/dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliteSchwein/dynamic-scene.git"
  },
  "keywords": [
    "twitch"
  ],
  "author": "tludwig-dev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eliteSchwein/dynamic-scene/issues"
  },
  "homepage": "https://github.com/eliteSchwein/dynamic-scene#readme",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/readline-sync": "^1.4.8",
    "@types/sharp": "^0.31.1",
    "axios": "^1.6.6",
    "bytes": "^3.1.2",
    "colorts": "^0.1.63",
    "esbuild": "^0.19.12",
    "form-data": "^4.0.0",
    "js-conf-parser": "^1.0.2",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "npm-check-updates": "^16.14.12",
    "readline-sync": "^1.4.10",
    "regex-parser": "^2.3.0",
    "shelljs": "^0.8.5",
    "stacktrace-js": "^2.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "websocket-ts": "^1.1.1",
    "@hotwired/stimulus": "^3.2.2",
    "@twurple/api": "^7.1.0",
    "@twurple/auth": "^7.1.0",
    "@twurple/chat": "^7.1.0",
    "@twurple/eventsub-ws": "^7.1.0",
    "@twurple/pubsub": "^7.1.0",
    "ws": "^8.13.0"
  },
  "dependencies": {
    "sharp": "^0.33.2"
  }
}
